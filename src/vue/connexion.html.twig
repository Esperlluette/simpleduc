  <body>

{% block body %}

	{% if form.valide is defined %}
		{% if form.valide == false %}
			<form class="mx-auto">
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<strong>ERREUR</strong>
					Email ou mot de passe incorrecte.
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			</form>
		{% endif %}
	{% endif %}


<div class="container-fluid">
  <div class="row">
    <div class="col">
      <img id="image_connexion" src="images/image_connexion.jpg" class="img-fluid" alt="...">
    </div>
    <div class="col">
	<center>
    <div id="block_connexion">
		<form class="mx-auto">
			<div class="form-group">
				<h1>Se Connecter</h1>
				On a essay√© de faire comme twitter c'est dur un peu...
			</div>
		</form>
    <div id="formulaires_connexion">
		<form action="?page=connexion" class="mx-auto" method="post" enctype="application/x-www-formurlencoded">

			<div class="form-group">
				<label for="inputEmail" class="sr-only">Email:</label>
				<input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Exemple@email.xyz" required autofocus>
			</div>

			<div class="form-group">
				<label for="inputPassword" class="sr-only">Mot de passe:</label>
				<input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="" required>
			</div>
			
			<div class="form-group" id="bouton">
				<button class="btn btn btn-secondary btn-block" type="submit" name="btConnecter">Connexion</button>
			</div>
		</form>
    </div>
	</center>
    </div>
    </div>
  </div>
</div>

{% endblock %}

