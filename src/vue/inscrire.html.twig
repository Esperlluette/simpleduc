{% extends "base.html.twig" %}

{% block title %}
	S'inscrire
{% endblock %}

{% block body %}
	{% if form.valide is defined %}
		{% if form.valide == true %}
			<div class="card text-white bg-success mb-3 flex" style="max-width: 20rem;">
  				<div class="card-header">Inscription Réussie</div>
  				<div class="card-body">
    			<h4 class="card-title">L'Email de confirmation a été envoyé</h4>
    			<p class="card-text">Inscription de {{form.nom}} {{form.prenom}} réussie</p>
  				</div>
			</div>				
			{% else %}
				<h1>Echec de l'inscription</h1>
				<h1>Erreur :
					{{form.message}}</h1>
				<h1>
					<a href="index.php?page=modif-profil">Retourner sur la page d'inscription</a>
				</h1>
			{% endif %}
		{% else %} 
        <form action="index.php?page=inscription" method="post" enctype="application/x-www-formurlencoded" style="Padding:30px;">
            <h1>Inscrivez-vous sur Simpleduc</h1>
            
            <label for="inputNom" class="sr-only">Nom :</label>
            <input type="text" id="inputNom" name="inputNom" class="form-control" placeholder="Nom" required>

            <label for="inputPrenom" class="sr-only">Prenom :</label>
            <input type="text" id="inputPrenom" name="inputPrenom" class="form-control" placeholder="Prenom" required>

            <label for="inputDateNaissance" class="sr-only">Date de naissance:</label>
            <input type="date" id="inputDateNaissance" name="inputDateNaissance" class="form-control" placeholder="Date naissance" required>

            <label for="inputTel" class="sr-only">Telephone :</label>
            <input type="tel" id="inputTel" name="inputTel" class="form-control" placeholder="Telephone" required>

            <label for="inputEmail" class="sr-only">Email :</label>
            <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required>

            <label for="inputPassword" class="sr-only">Mot de passe :</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>

            <label for="inputPassword2" class="sr-only">Confirmer votre mot de passe :</label>
            <input type="password" id="inputPassword2" name="inputPassword2" class="form-control" placeholder="confirmer mot de passe" required>

            <label for="inputAdresse" class="sr-only">Adresse :</label>
            <input type="text" id="inputAdresse" name="inputAdresse" class="form-control" placeholder="Adresse" required>

            <label for="inputCodePostal" class="sr-only">Code Postal :</label>
            <input type="text" id="inputCodePostal" name="inputCodePostal" class="form-control" placeholder="Code postal" required>

            <label for="inputPays" class="sr-only">Pays :</label>
            <input type="text" id="inputPays" name="inputPays" class="form-control" placeholder="Pays" required>

            <legend class="mt-4">Type de permis</legend>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="A">
                        Permis A
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios" value="B">
                        Permis B
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="Sans Permis">
                        Sans permis
                    </label>
                </div>

            <label for="inputDateEmbauche" class="sr-only">Date Embauche :</label>
            <input type="date" id="inputDateEmbauche" name="inputDateEmbauche" class="form-control" placeholder="Date embauche" required>

            <label for="inputNumSecu" class="sr-only">Num secu :</label>
            <input type="number" id="inputNumSecu" name="inputNumSecu" class="form-control" placeholder="Num secu" required>

            <legend class="mt-4">Qualification</legend>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios" value="1">
                        Employe
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios2" id="optionsRadios2" value="2">
                        Comptable
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios3" id="optionsRadios3" value="3">
                        Ressources humaine
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios4" id="optionsRadios4" value="4">
                        Responsable Technique
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios5" id="optionsRadios5" value="5">
                        Direction
                    </label>
                </div>

            
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="btInscrire">S'inscrire</button>

            <button class="btn btn-lg btn-primary btn-block" type="reset">Réinitialisation</button>
           
            </form>
           
	{% endif %}
{% endblock %}