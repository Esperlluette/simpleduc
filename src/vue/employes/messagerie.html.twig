{% extends "base.html.twig" %}

{% block title %}
    Messagerie
{% endblock %}

{% block body %}
<ul class="nav nav-tabs" style="padding-top: 20px;">
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" href="#IRC1">Chat Général</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" href="#IRCPrive">Message privé</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" href="#IRCArchive">Archive</a>
    </li>
  </ul>
  <div id="myTabContent" class="tab-content">
    <form action="index.php?page=sendMessage" method="post" enctype="application/x-www-formurlencoded">
      <div class="form-group">
        <label for="exampleTextarea" class="form-label mt-4">Chat</label>
        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
        <button type="submit" class="btn btn-primary mt-4" name="btMessageG">Envoyer</button>
      </div>
    </form> 
    <div class="tab-pane fade show active" id="IRC1"> 
      <div class="container-fluid">
        <div class="row">
          <div class="col">
          {% for msg in list %}
          <p>{{msg.idEmmeteur}} : {{msg.Contenu}} </p>
          {% endfor %}
          </div>
        </div>
        </div>
        </div>
    </div>
    <div class="tab-pane fade" id="IRCPrive">
      <div class="container-fluid">
        <div class="row">
          <div class="col">

          </div>
        </div>
        </div>
        </div>
    </div>
    <div class="tab-pane fade" id="IRCArchive">
      <div class="container-fluid">
        <div class="row">
          <div class="col">

          </div>
        </div>
        </div>
        </div>
    </div>
  </div>

{% endblock %}

